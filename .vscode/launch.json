  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug server",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "ts-node/register"],
      "program": "${workspaceFolder}\\server\\app.ts",
      "cwd": "${workspaceRoot}/server",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "client",
      "cwd": "client",
      "request": "launch",
      "type": "dart"
    },
    {
      "name": "client (profile mode)",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "client (release mode)",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}
